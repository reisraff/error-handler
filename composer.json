{
    "name": "middlewares/error-handler",
    "type": "library",
    "description": "Middleware to handle http errors",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "server",
        "http",
        "exception",
        "error",
        "formatter",
        "handler"
    ],
    "homepage": "https://github.com/middlewares/error-handler",
    "support": {
        "issues": "https://github.com/middlewares/error-handler/issues"
    },
    "require": {
        "php": "^7.1",
        "middlewares/utils": "^2.1",
        "psr/http-server-middleware": "^1.0",
        "thecodingmachine/safe": "^0.1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit --coverage-text",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix .",
        "coverage": "phpunit --coverage-html=coverage"
    }
}
